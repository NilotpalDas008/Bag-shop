<%- include('./partials/header') %>
    <div class="w-full min-h-screen bg-slate-50">
        <div class="max-w-7xl mx-auto px-6 lg:px-10 py-10">
            <div class="flex items-center justify-between mb-8">
                <div>
                    <h1 class="text-3xl font-semibold text-slate-900">Shop</h1>
                    <p class="text-slate-500">Discover the latest bags and accessories</p>
                </div>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
                <aside class="lg:col-span-1">
                    <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-5 space-y-6">
                        <div>
                            <h3 class="text-sm font-semibold text-slate-700 mb-2">Sort by</h3>
                            <form action="/shop">
                                <select class="w-full border border-slate-200 rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500" name="sortby">
                                    <option value="popular">Popular</option>
                                    <option value="newest">Newest</option>
                                </select>
                            </form>
                        </div>
                        <div>
                            <h3 class="text-sm font-semibold text-slate-700 mb-2">Collections</h3>
                            <div class="flex flex-col gap-2 text-sm">
                                <a class="text-slate-600 hover:text-blue-600" href="">New Collection</a>
                                <a class="text-slate-600 hover:text-blue-600" href="">All Products</a>
                                <a class="text-slate-600 hover:text-blue-600" href="/shop?discount=1">Discounted Products</a>
                            </div>
                        </div>
                        <div>
                            <h3 class="text-sm font-semibold text-slate-700 mb-2">Filters</h3>
                            <div class="flex flex-col gap-2 text-sm">
                                <a class="text-slate-600 hover:text-blue-600" href="">Availability</a>
                                <a class="text-slate-600 hover:text-blue-600" href="">Discount</a>
                            </div>
                        </div>
                    </div>
                </aside>

                <section class="lg:col-span-3">
                    <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-3 gap-6">
                        <% if (products && products.length) { %>
                            <% products.forEach(function(product){ %>
                                <div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden hover:shadow-md transition">
                                    <div class="w-full h-52 flex items-center justify-center" style="background-color: <%= product.bgcolor %>">
                                        <img class="h-44 object-contain" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>"
                                            alt="<%= product.name %>">
                                    </div>
                                    <div class="flex items-center justify-between px-4 py-4" style="background-color: <%= product.panelcolor %>; color: <%= product.textcolor %>">
                                        <div>
                                            <h3 class="font-semibold leading-5"><%= product.name %></h3>
                                            <p class="text-sm opacity-90">â‚¹ <%= product.price %></p>
                                        </div>
                                        <a class="w-9 h-9 rounded-full bg-white/90 text-slate-800 flex items-center justify-center shadow-sm hover:bg-white" href="/addcart/<%= product._id %>" aria-label="Add to cart">
                                            <i class="ri-add-line"></i>
                                        </a>
                                    </div>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <div class="col-span-full bg-white rounded-2xl border border-dashed border-slate-300 p-8 text-center text-slate-500">
                                No products available yet.
                            </div>
                        <% } %>
                    </div>
                </section>
            </div>
        </div>
    </div>
    <%- include('./partials/footer') %>